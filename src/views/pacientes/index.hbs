<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0 text-dark">Pacientes</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="{{urlglobal}}/home')}}">Inicio</a></li>
                    <li class="breadcrumb-item active">Pacientes</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        {{#if_equal user.tipo 'DOCTOR'}}
                        <a href="{{urlglobal}}/pacientes/create" class="btn btn-info"><i class="fa fa-plus"></i> Nuevo</a>
                        <a href="{{urlglobal}}/pacientes/registrarExistente" class="btn btn-info"><i class="fa fa-plus"></i> Importar paciente</a>
                        {{/if_equal}}
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">
                        <table id="example2" class="table data-table table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>Usuario</th>
                                    <th>Nombre</th>
                                    <th>C.I.</th>
                                    <th>Teléfono - Celular</th>
                                    <th>Correo</th>
                                    <th>Foto</th>
                                    <th>Opciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each pacientes}}
                                <tr>
                                    <td>{{this.usuario}}</td>
                                    <td>{{this.nombre}} {{this.paterno}} {{this.materno}}</td>
                                    <td>{{this.ci}} {{this.ci_exp}}</td>
                                    <td>{{this.fono}} - {{this.cel}}</td>
                                    <td>{{this.email}}</td>
                                    <td><img src="{{urlglobal}}/imgs/users/{{this.foto}}" alt="Foto" class="img-table"></td>
                                    <td class="btns-opciones">
                                        {{#if_equal ../user.tipo 'DOCTOR'}}
                                        <a href="{{urlglobal}}/pacientes/edit/{{this.id}}" class="modificar"><i class="fa fa-edit" data-toggle="tooltip" data-placement="left" title="Modificar"></i></a>
    
                                        <a href="#" data-url="{{urlglobal}}/pacientes/destroy/{{this.user_id}}" data-toggle="modal" data-target="#modal-eliminar" class="eliminar"><i class="fa fa-trash" data-toggle="tooltip" data-placement="left" title="Eliminar"></i></a>
                                        {{/if_equal}}
                                    </td>
                                </tr>
                                {{/each}}
                            </tbody>
                        </table>
                    </div>
                    <!-- /.card-body -->
                </div>
              <!-- /.card -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </div>
</section>

{{>modal/eliminar}}

{{#section 'scripts'}}
<script>

     $('table.data-table').DataTable({
        columns : [
            {width:"10%"},
            null,
            null,
            {width:"10%"},
            {width:"14%"},
            {width:"5%"},
            {width:"10%"},
        ],
        scrollCollapse: true,
        language: lenguaje,
        pageLength:25
    });

 
    // ELIMINAR
    $(document).on('click','table tbody tr td.btns-opciones a.eliminar',function(e){
        e.preventDefault();
        let paciente = $(this).parents('tr').children('td').eq(0).text();
        $('#mensajeEliminar').html(`¿Está seguro(a) de eliminar al paciente <b>${paciente}</b>?`);
        let url = $(this).attr('data-url');
        console.log($(this).attr('data-url'));
        $('#formEliminar').prop('action',url);
    });

    $('#btnEliminar').click(function(){
        $('#formEliminar').submit();
    });

</script>
{{/section}}