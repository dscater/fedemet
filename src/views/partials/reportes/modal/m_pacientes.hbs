<div class="modal fade" id="m_pacientes">
    <div class="modal-dialog">
      <div class="modal-content  bg-sucess">
        <div class="modal-header">
            <h4 class="modal-title">Lista de pacientes</h4>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
            <form action="{{urlglobal}}/reportes/pacientes" method="get" target="_blank" id="formPacientes">
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label>Filtro:</label>
                            <select class="form-control" name="filtro" id="filtro">
                                <option value="todos">Todos</option>
                                {{#if_equal user.tipo 'ADMINISTRADOR'}}
                                <option value="especialidad">Por Especialidad</option>
                                {{/if_equal}}
                                <option value="fecha">Por fechas</option>
                            </select>
                        </div>
                    </div>

                    <div class="col-md-12 {{#if_equal user.tipo 'DOCTOR'}} oculto{{/if_equal}}">
                        <div class="form-group">
                            <label>Filtro:</label>
                            <select class="form-control" name="especialidad_id" id="especialidad_id">
                                {{#if_equal user.tipo 'DOCTOR'}}
                                <option value="{{especialidad.id}}">{{especialidad.nombre}}</option>
                                {{/if_equal}}

                                {{#if_equal user.tipo 'ADMINISTRADOR'}}
                                <option value="todos">Todos</option>
                                {{#each especialidads}}
                                <option value="{{this.id}}">{{this.nombre}}</option>
                                {{/each}}
                                {{/if_equal}}
                            </select>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Fecha inicio:</label>
                            <input type="date" name="fecha_ini" id="fecha_ini" value="{{fecha}}" class="form-control">
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Fecha fin:</label>
                            <input type="date" name="fecha_fin" id="fecha_fin" value="{{fecha}}" class="form-control">
                        </div>
                    </div>
                </div>
        </div>
        <div class="modal-footer justify-content-between">
          <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
          <button type="submit" class="btn btn-info" id="btnpacientes">Generar reporte</button>
          </form>
        </div>
      </div>
      <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>
   <!-- /.modal -->
