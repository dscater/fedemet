<!-- BEGIN breadcrumb -->
<ol class="breadcrumb">
  <li class="breadcrumb-item"><a href="javascript:;">Inicio</a></li>
  <li class="breadcrumb-item"><a href="javascript:;">Ingreso de productos</a></li>
  <li class="breadcrumb-item active">Editar</li>
</ol>
<!-- END breadcrumb -->
<!-- BEGIN page-header -->
<h1 class="page-header">Ingreso de productos <small>Editar</small></h1>
<!-- END page-header -->

<div class="row mb-3">
    <!-- BEGIN col-6 -->
    <div class="col-md-12">
        <!-- BEGIN panel -->
        <div class="panel panel-inverse" data-sortable-id="form-stuff-11">
            <!-- BEGIN panel-heading -->
            <div class="panel-heading">
                <h4 class="panel-title">Información</h4>
                <div class="panel-heading-btn">
                    <a href="javascript:;" class="btn btn-xs btn-icon btn-default" data-toggle="panel-expand"><i class="fa fa-expand"></i></a>
                    <a href="javascript:;" class="btn btn-xs btn-icon btn-success" data-toggle="panel-reload"><i class="fa fa-redo"></i></a>
                    <a href="javascript:;" class="btn btn-xs btn-icon btn-warning" data-toggle="panel-collapse"><i class="fa fa-minus"></i></a>
                    <a href="javascript:;" class="btn btn-xs btn-icon btn-danger" data-toggle="panel-remove"><i class="fa fa-times"></i></a>
                </div>
            </div>
            <!-- END panel-heading -->
            <!-- BEGIN panel-body -->
            <div class="panel-body">
                <form action="{{urlbase}}/ingreso_productos/update/{{ingreso_producto.id}}" method="POST" enctype="multipart/form-data">
                <div class="row mb-2">
                    <div class="col-md-4 form-group mb-2">
                        <label>Producto*</label>
                        <input type="text" class="form-control" value="{{ingreso_producto.p_nombre}}" readonly>
                    </div>
                    <div class="col-md-4 form-group mb-2">
                        <label>Proveedor*</label>
                        <select name="proveedor_id" id="proveedor_id" class="form-select required" required> <option value="">Seleccione...</option>
                            {{#each proveedors}}
                            <option value="{{this.id}}">{{this.razon_social}}</option>
                            {{/each}}
                        </select>
                    </div>
                    <div class="col-md-4 form-group mb-2">   
                        <label class="form-label">Precio de compra*</label>
                        <input class="form-control" type="number" step="0.01"  name="precio_compra" value="{{ingreso_producto.precio_compra}}"  placeholder="Precio de compra" required/>
                    </div>
                    <div class="col-md-4 form-group mb-2">   
                        <label class="form-label">Cantidad*</label>
                        <input class="form-control" type="number" step="0.01"  name="cantidad" value="{{ingreso_producto.cantidad}}"  placeholder="Cantidad" required/>
                    </div>
                    <div class="col-md-4 form-group mb-2">
                        <label>Tipo de ingreso*</label>
                        <select name="tipo_ingreso_id" id="tipo_ingreso_id" class="form-select required" required> <option value="">Seleccione...</option>
                            {{#each tipo_ingresos}}
                            <option value="{{this.id}}">{{this.nombre}}</option>
                            {{/each}}
                        </select>
                    </div>
                    <div class="col-md-4 form-group mb-2">   
                        <label class="form-label">Descripción</label>
                        <input class="form-control" type="text"  name="descripcion" value="{{ingreso_producto.descripcion}}"  placeholder="Descripción"/>
                    </div>
                </div>
                    <button type="submit" class="btn btn-primary w-100px me-5px">Guardar</button>
                    <a href="{{urlbase}}/ingreso_productos" type="submit" class="btn btn-default w-100px">Volver</a>
                </form>
            </div>
        </div>
        <!-- END panel -->
    </div>
    <!-- END col-6 -->
</div>

{{#section 'scripts'}}
<script>
    document.addEventListener('DOMContentLoaded', function() {
        document.getElementById('proveedor_id').value = '{{ingreso_producto.proveedor_id}}';
        document.getElementById('tipo_ingreso_id').value = '{{ingreso_producto.tipo_ingreso_id}}';
    });
</script>
{{/section}}