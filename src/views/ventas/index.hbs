<!-- BEGIN breadcrumb -->
<ol class="breadcrumb">
  <li class="breadcrumb-item"><a href="javascript:;">Inicio</a></li>
  <li class="breadcrumb-item active">Ventas</li>
</ol>
<!-- END breadcrumb -->
<!-- BEGIN page-header -->
<h1 class="page-header">Ventas</h1>
<!-- END page-header -->

<div class="row">
    <div class="col-md-12">
        <!-- BEGIN panel -->
        <div class="panel panel-inverse">
            <!-- BEGIN panel-heading -->
            <div class="panel-heading">
                <h4 class="panel-title btn-nuevo"><a href="{{urlbase}}/ventas/create" class="btn btn-primary"><i class="fa fa-plus"></i> Nuevo</a></h4>
                <div class="panel-heading-btn">
                    <a href="javascript:;" class="btn btn-xs btn-icon btn-default" data-toggle="panel-expand"><i class="fa fa-expand"></i></a>
                    <a href="javascript:;" class="btn btn-xs btn-icon btn-success" data-toggle="panel-reload"><i class="fa fa-redo"></i></a>
                    <a href="javascript:;" class="btn btn-xs btn-icon btn-warning" data-toggle="panel-collapse"><i class="fa fa-minus"></i></a>
                </div>
            </div>
            <!-- END panel-heading -->
            <!-- BEGIN panel-body -->
            <div class="panel-body">
                <table id="data-table-responsive" width="100%" class="table table-striped table-bordered align-middle text-nowrap tabla_datos">
                    <thead>
                        <tr>
                            <th width="1%"></th>
                            <th class="text-nowrap">Usuario</th>
                            <th class="text-nowrap">Cliente</th>
                            <th class="text-nowrap">NIT</th>
                            <th class="text-nowrap">Total</th>
                            <th class="text-nowrap">Descuento %</th>
                            <th class="text-nowrap">Total Final</th>
                            <th class="text-nowrap">Fecha de Registro</th>
                            <th class="text-nowrap">Acción</th>
                        </tr>
                    </thead>
                    <tbody>
                        
                        {{#each ventas}}
                        <tr class="odd gradeX">
                            <td width="1%" class="fw-bold">{{this.id}}</td>
                            <td>{{this.usuario}}</td>
                            <td>{{this.n_cliente}}</td>
                            <td>{{this.nit}}</td>
                            <td>{{this.total}}</td>
                            <td>{{this.descuento}}</td>
                            <td>{{this.total_final}}</td>
                            <td>{{this.fecha_registro}}</td>
                            <td class="btns-opciones">
                                <a href="{{../urlbase}}/ventas/ticket/{{this.id}}" class="evaluar"><i class="fa fa-print" data-toggle="tooltip" data-placement="left" title="Imprimir"></i></a>
                                <a href="{{../urlbase}}/ventas/edit/{{this.id}}" class="modificar"><i class="fa fa-edit" data-toggle="tooltip" data-placement="left" title="Modificar"></i></a>
                                {{#if_equal ../user.tipo 'ADMINISTRADOR'}}
                                <a href="#" data-url="{{urlbase}}/ventas/destroy/{{this.id}}" class="eliminar"><i class="fa fa-trash" data-toggle="tooltip" data-placement="left" title="Eliminar"></i></a>
                                {{/if_equal}}
                                {{#if_equal ../user.tipo 'SUPERVISOR'}}
                                <a href="#" data-url="{{urlbase}}/ventas/destroy/{{this.id}}" class="eliminar"><i class="fa fa-trash" data-toggle="tooltip" data-placement="left" title="Eliminar"></i></a>
                                {{/if_equal}}
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
            <!-- END panel-body -->
        </div>
        <!-- END panel -->
    </div>
</div>

{{> modal/eliminar}}

{{#section 'scripts'}}
<script> 
    // ELIMINAR
    $(document).on('click','table.tabla_datos a.eliminar',function(e){
        e.preventDefault();
        let venta = $(this).parents('tr').children('td').eq(0).text();
        $('#mensajeEliminar').html(`¿Está seguro(a) de eliminar la venta <b>${venta}</b>?`);
        let url = $(this).attr('data-url');
        console.log($(this).attr('data-url'));
        $('#formEliminar').prop('action',url);
        $("#modal-eliminar").modal("show");
    });

    $('#btnEliminar').click(function(){
        $('#formEliminar').submit();
    });
</script>
{{/section}}
